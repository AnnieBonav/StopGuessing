<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="ingredientsViewModel"
            type="com.anniebonav.stopguessingm3.data.UIViewModelInteractIngredient"/>
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.InteractsMealPlanFragment">

    <TextView
        android:id="@+id/ingredientsInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="16dp"
        android:text="Fill-out your Ingredient's Information"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/md_theme_light_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ingredientNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ingredientsInstruction"
        app:startIconContentDescription="@string/delete_icon"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
            android:text="@={ingredientsViewModel.currentIngredientName}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ingredientCategoryInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Category"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ingredientNameInput"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
            android:text="@={ingredientsViewModel.currentIngredientCategory}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ingredientAmountInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingredient Amount"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ingredientCategoryInput"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:inputType="number"
            android:text="@={ingredientsViewModel.currentIngredientAmount}" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ingredientMeasurementInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Measurement Unit"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ingredientAmountInput"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:inputType="text"
            android:text="@={ingredientsViewModel.currentIngredientMeasurement}"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/crudActionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ingredientMeasurementInput"
        android:text="Action - Meal Plan"
        />
</androidx.constraintlayout.widget.ConstraintLayout>

</layout>