<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="ingredientsViewModel"
            type="com.anniebonav.stopguessingm3.data.UIViewModelInteractIngredient"/>
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.InteractsMealPlanFragment"
        android:layout_marginHorizontal="24dp">

    <LinearLayout
        android:id="@+id/customTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        >
        <ImageView
            android:id="@+id/arrowBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/ingredientsInstruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Ingredient"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
            app:layout_constraintStart_toEndOf="@+id/chevronBack"
            android:layout_marginLeft="25dp"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ingredientNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/customTopBar"
        app:startIconContentDescription="@string/delete_icon"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
            android:text="@={ingredientsViewModel.currentIngredientName}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ingredientCategoryInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Category"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ingredientNameInput"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
            android:text="@={ingredientsViewModel.currentIngredientCategory}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ingredientAmountInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingredient Amount"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ingredientCategoryInput"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:inputType="number"
            android:text="@={ingredientsViewModel.currentIngredientAmount}" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ingredientMeasurementInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Measurement Unit"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ingredientAmountInput"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:inputType="text"
            android:text="@={ingredientsViewModel.currentIngredientMeasurement}"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/crudActionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ingredientMeasurementInput"
        android:text="Action - Meal Plan"
        />
</androidx.constraintlayout.widget.ConstraintLayout>

</layout>