<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AboutFragment"
    android:layout_marginBottom="100dp"
    >
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_close_24"
        android:contentDescription="close"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:layout_marginTop="66dp"
                android:layout_marginStart="24dp"
                android:textAppearance="?attr/textAppearanceHeadline5" />

            <LinearLayout
                android:id="@+id/disclaimer_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/warning_rounded_edges"
                android:paddingHorizontal="25dp"
                android:paddingVertical="15dp"
                >

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_baseline_warning_amber_24"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="center"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Following The Zone diet should be discussed with your doctor."
                    android:textColor="@color/md_theme_light_secondary"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="italic"

                    />
            </LinearLayout>


            <TextView
                android:id="@+id/step1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="1) Review and add ingredients"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:layout_marginTop="32dp" />

            <TextView
                android:id="@+id/step1_paragraph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="Look at the amounts of the ingredients and change them based on your doctors recommendations, or add your personal new ones."
                android:textAppearance="?attr/textAppearanceBody1"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="24dp"
                android:textColor="@color/md_theme_light_onSurfaceVariant"
                />

            <Button
                android:id="@+id/step1_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredients"
                android:paddingHorizontal="100dp"
                android:paddingVertical="13dp"
                android:layout_marginTop="24dp" />

            <TextView
                android:id="@+id/step2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="2) Create blueprints"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:layout_marginTop="32dp"
                android:textColor="@color/md_theme_light_onSurfaceVariant"
                />

            <TextView
                android:id="@+id/step2_paragraph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="Create blueprints based on your personal goals or use the predefined one."
                android:textAppearance="?attr/textAppearanceBody1"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="24dp" />

            <Button
                android:id="@+id/step2_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blueprints"
                android:paddingHorizontal="100dp"
                android:paddingVertical="13dp"
                android:layout_marginTop="24dp"
                />

            <TextView
                android:id="@+id/step3_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="3) Generate a meal plan"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:layout_marginTop="32dp" />

            <TextView
                android:id="@+id/step3_paragraph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="Now you can generate a meal plan based on one of the blueprints and follow it to meet your goals."
                android:textAppearance="?attr/textAppearanceBody1"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="24dp"
                android:textColor="@color/md_theme_light_onSurfaceVariant"/>

            <Button
                android:id="@+id/step3_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meal Plans"
                android:paddingHorizontal="100dp"
                android:paddingVertical="13dp"
                android:layout_marginTop="24dp" />
        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>